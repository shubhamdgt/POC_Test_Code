  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "https://myenovation.com/",
    "productName": "CodePexel",
    "copyright": "Copyright Â© 2024 CodePexel",
    "icon": "assets/img/favicon2.png",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.js",
      "index.html",
      "assets/**/*"  ,
    "node_modules/**/*",
    "dist/**/*"
   ],
  "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
